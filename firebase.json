{
  "database": {
    "rules": "database.rules.json"
  },
  // "firestore": {
  //   "rules": "firestore.rules",
  //   "indexes": "firestore.indexes.json"
  // },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/bigben", "function": "bigben"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
